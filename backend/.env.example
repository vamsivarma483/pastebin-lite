# Example environment variables for backend
# Copy this to .env and fill in your actual values

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database?schema=public
# For Vercel, use Vercel Postgres: https://vercel.com/docs/storage/vercel-postgres
DATABASE_URL="postgresql://user:password@localhost:5432/pastebin_lite?schema=public"

# Node environment
NODE_ENV="development"

# Server port
PORT=3001

# Enable test mode for deterministic testing
# When set to 1, respects x-test-now-ms header for expiry testing
TEST_MODE="0"

# Frontend URL (for CORS and redirect URLs)
FRONTEND_URL="http://localhost:3000"
